  <div class="wrap">

<%= form_for(@picture) do |f| %>
<% if @picture.errors.any? %>
  <div id="error_explanation">
    <h2><%= @picture.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
    <br>
  <%= f.text_field :title, placeholder: "タイトル", class: "form-control" %>
  <br>
  <%= f.text_field :content, placeholder: "本文", class: "form-control" %>
  <br>
  <%= f.file_field :image %>

  <br>
  <%= f.submit %>
<% end %>
</div>
