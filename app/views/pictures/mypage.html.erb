<div class="wrap">

    <p><%= user_profile_img(@user) %></p>
    <img src="<%= @user.image_url %>">

<br>

<% @pictures.each do |picture| %>
  <ul class="cf">
    <li class="image_area"><%= user_profile_img(picture.user) %></li>
    <li  class="name_area"><%= picture.user.name %>さん</li>
  </ul>
  <br>
  <p><%= image_tag picture.image.url %></p>
  <p>タイトル:<%= picture.title %></p>
  <p><%= picture.content %></p>
<% end %>
  </div>
